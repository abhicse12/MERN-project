<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Hey host! here is your homes
      </h2>
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-white rounded-lg shadow-md hover:shadow-xl transition duration-300 overflow-hidden">
            <!-- Image Section -->
            <img 
              src="<%= home.photoURL %>" 
              alt="<%= home.houseName %>" 
              class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
            />
            <!-- Content Section -->
            <div class="p-4">
              <!-- House Name -->
              <h2 class="text-lg font-bold text-gray-800 mb-2 hover:text-blue-500 transition-colors duration-300">
                <%= home.houseName %>
              </h2>
              <!-- Location -->
              <p class="text-gray-600 mb-1">
                <span class="font-medium text-gray-700">Location:</span> <%= home.location %>
              </p>
              <!-- Price -->
              <p class="text-gray-600 mb-4">
                <span class="font-medium text-gray-700">Per Night Price:</span> â‚¹<%= home.price %>
              </p>
              <!-- Book Now Button -->
              <a  href="/host/edit-home/<%= home._id %>?editing=true" style="color: black; background-color:aqua; padding:px;" >Edit</a>
              <form action="/host/delete-home/<%= home._id %>"   method="POST">
                <button type="submit" style="color: black; background-color:red; padding:2px;" >Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>

      
      
      
    </main>
  </body>
</html>