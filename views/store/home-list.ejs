<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Here are our registered homes:
      </h2>
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-white rounded-lg shadow-md hover:shadow-xl transition duration-300 overflow-hidden">
            <!-- Image Section -->
            <img 
              src="<%= home.photoURL %>" 
              alt="<%= home.houseName %>" 
              class="w-full h-48 object-cover transition-transform duration-300 hover:scale-105"
            />
            <!-- Content Section -->
            <div class="p-4">
              <!-- House Name -->
              <h2 class="text-lg font-bold text-gray-800 mb-2 hover:text-blue-500 transition-colors duration-300">
                <%= home.houseName %>
              </h2>
              <!-- Location -->
              <p class="text-gray-600 mb-1">
                <span  style="color: black;font-family:Arial, Helvetica, sans-serif;font-weight:300; padding:2px;" >Location:</span> <%= home.location %>
              </p>
              <!-- Price -->
              <p class="text-gray-600 mb-4">
                <span  style="color: rgba(14, 1, 1, 0.929);font-weight:800; padding:2px;">Per Night Price:</span> â‚¹<%= home.price %>
              </p>
              <p class="text-gray-600 mb-4">
                <span  style="color: rgb(203, 7, 4);font-weight: 500; padding:2px;" >Rating:</span> <%= home.rating %>
              </p>
              <!-- <button style="color: black; background-color:rgb(110, 239, 70); padding:2px;" >Details</button> -->
               <a  style="color: black; background-color:rgb(110, 239, 70); padding:2px;" href="/homes/<%= home._id %>">Details</a>
              <!-- Book Now Button -->
              <%- include('../partials/favourites',{home:home}) %>
            </div>
          </li>
        <% }) %>
      </ul>

      
      
      
    </main>
  </body>
</html>